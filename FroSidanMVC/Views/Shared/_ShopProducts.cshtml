@model ShopVM[]


<div class="container">
    <div class="row row-cols-4">
        @foreach (var item in Model)
        {
            <div class="col-xs-3">
                <div class="card" style="width: 18rem;">
                    <a asp-controller="Products" asp-action="Detail" asp-route-id=@item.Id>
                        <div class="card text-center">
                            <img src="~/Images/@item.ThumbnailUrl" class="card-img-top" alt="@item.Name" />
                            <div class="card-body">
                                <h5 class="card-title">@item.Name </h5>
                                <p class="card-text">@item.SubCategory</p>
                                <a href="#" onclick="AddToCart(@item.Id)" class="btn btn-success">Lägg till i varukorg 🛒</a>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</div>