@model ShopVM[]


<div class="container">
    <div class="row row-cols-4">
        @foreach (var item in Model)
        {
            <div class="col-sm-3">
                <div class="card" style="width: 18rem;">
                    <a asp-controller="Products" asp-action="Detail" asp-route-id=@item.Id>
                        <div class="cardShop text-center">
                            <img src="~/Images/@item.ThumbnailUrl" class="shopImg card-img-top" style="height:100px" alt="@item.Name" />
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@item.Name </h5>
                                <p class="card-text">@item.SubCategory</p>
                                <div class="mt-auto">
                                    <a href="#" onclick="AddToCart(@item.Id)" class="btn btn-success" style="align-content:baseline">Lägg till i varukorg 🛒</a>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</div>