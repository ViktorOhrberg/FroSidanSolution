@model ShopVM[]

<div class="container">
    <div class="row row-cols-3">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-3">
                <div class="cardGroup card-group text-center">
                    <div class="card" style="width: 18rem;">
                        <a asp-controller="Products" asp-action="Detail" asp-route-id=@item.Id>
                            <img src="~/Images/@item.ThumbnailUrl" class="shopImg card-img-top" style="width:75%" alt="@item.Name" />
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@item.Name </h5>
                                <p class="card-text">@item.SubCategory</p>
                                <p class="card-text">@item.Price kr</p>
                                <div class="mt-auto">
                                    <a href="#" onclick="AddToCart(@item.Id)" class="btn btn-success">Lägg i varukorg <i class="fas fa-shopping-cart"></i></a>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>