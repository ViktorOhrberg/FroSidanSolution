@model ShoppingCartComponentVM
    <a asp-controller="Products" asp-action="Checkout">
        <div id="component" style="  
        background-color:#fffdfa;
        border: solid #fffdfa 2px;
        border-radius: 8px;
        text-align: center;
        padding: 10px 5px 5px 5px;">
            <h5 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">
                <i class="fas fa-shopping-cart"></i> @Model.NoOfItems <br />
                @Model.TotPrice.ToString("c")
            </h5>
        </div>
    </a>