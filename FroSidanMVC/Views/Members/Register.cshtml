@model MemberRegisterVM
<h3>Registrera</h3>
<form asp-controller="Members" asp-action="Register">
    <label asp-for="Email">Email</label>
    <input asp-for="Email" />
    <span asp-validation-for="Email"></span>

    <label asp-for="Password">Lösenord</label>
    <input asp-for="Password" />
    <span asp-validation-for="Password"></span>

    <label asp-for="PasswordRepeat">Repetera lösenord</label>
    <input asp-for="PasswordRepeat" />
    <span asp-validation-for="PasswordRepeat"></span>

    <label asp-for="FirstName">Förnamn</label>
    <input asp-for="FirstName" />
    <span asp-validation-for="FirstName"></span>

    <label asp-for="LastName">Efternamn</label>
    <input asp-for="LastName" />
    <span asp-validation-for="LastName"></span>
    <br />
    <input type="submit" value="Register" />
</form>
<div asp-validation-summary="All"></div>